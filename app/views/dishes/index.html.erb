<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
        <% @courses.each do |course| %><br>
        <div>
          <div>
            <h2 class="intro-text text-center">
              <%= course.name %><br>
              <h6>
                <strong><%= link_to "Add Dish", new_dish_path(course_id: course.id) %><br></strong>
              </h6>
            </h2>
            <% if course.id == 1 %>
              <section id="appetizers">
                <%= image_tag asset_url("cherry.png"), id: "course_1" %>
              </section>
            <% elsif course.id == 2 %>
              <section id="plates">
                <%= image_tag asset_url("bamboo.png"), id: "course_2" %>
              </section>
            <% elsif course.id == 3 %>
              <section id="entrees">
                <%= image_tag asset_url("torii.png"), id: "course_3" %>
              </section>
            <% elsif course.id == 4 %>
              <section id="desserts">
                <%= image_tag asset_url("tea.png"), id: "course_4" %>
              </section>
            <% elsif course.id == 5 %>
              <section id="drinks">
                <%= image_tag asset_url("enso.png"), id: "course_5" %>
              </section>
            <% end %>
          </div>
        <div>
        <% course.dishes.each do |dish| %>
        <div class="row">
          <div class="box dishes">
            <div class="col-lg-12">
              <p>$<%= dish.price %></p>
              <p><%= link_to "#{dish.name}", edit_dish_path(dish) %></p>
              <p><%= dish.description %></p>
              <p><%= link_to 'Show', edit_dish_path(dish) %></p><br>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </h4>
  </div>
  <% end %>

